pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Your build steps here
                    sh 'mvn clean install'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sourceDirectory = "/var/lib/jenkins/workspace/hello world pipeline proj/webapp/target/webapp.war"
                    targetDirectory = "/var/lib/jenkins/workspace/hello world pipeline proj/tomcat/webapps/"

                    // Ensure the target directory exists
                    sh "mkdir -p ${targetDirectory}"

                    // Copy the .war file to the target directory
                    sh "cp \"${sourceDirectory}/*.war\" \"${targetDirectory}\""
                }
            }
        }
    }
}
