pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Your build steps here
                    sh 'mvn clean install'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    cp "/var/lib/jenkins/workspace/hello world pipeline proj/webapp/target/webapp.war /home/azureuser/apache-tomcat-9.0.83/webapps/"
                
                    // Restart Tomcat
                    sh '/var/lib/jenkins/workspace/hello world pipeline proj/tomcat/shutdown.sh'
                    sh '/var/lib/jenkins/workspace/hello world pipeline proj/tomcat/bin/startup.sh'

                
                }
            }
        }
    }
}
