pipeline {
    agent any
 
    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout your Git repository
                    checkout scm
                }
            }
        }
 
        stage('Build') {
            steps {
                script {
                    // Build using Maven
                    sh 'mvn clean install'
                }
            }
        }
 
        stage('Deploy') {
            steps {
                script {
                    // Copy artifact to Tomcat webapps folder
                    sh 'cp target/*.war /home/azureuser/apache-tomcat-9.0.83/webapps/'
 
                    // Restart Tomcat
                    sh '/home/azureuser/apache-tomcat-9.0.83/bin/shutdown.sh'
                    sh '/home/azureuser/apache-tomcat-9.0.83/bin/startup.sh'
                }
            }
        }
    }
}
